<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ecefef"
    android:orientation="vertical">
    <!--
    android:layout_width="match_parent" 设置宽度 match_parent 代表铺满屏幕
    android:layout_height="match_parent" 设置高度 match_parent 代表铺满屏幕
    android:background="#ecefef" 设置背景颜色
     android:orientation="vertical" 设置布局方向 vertical 垂直布局 horizontal 水平布局
 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#fff"
        android:orientation="horizontal">

        <!-- android:layout_width="match_parent" 设置宽度 match_parent 代表铺满屏幕
         android:layout_height="48dp"    设置高度为具体值48  dp是单位
         android:background="#fff"       设置背景颜色
         android:orientation="horizontal"  设置布局方向 vertical 垂直布局 horizontal 水平布局 -->

        <ImageView
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:background="#ececec" />

        <!--
            android:layout_width="30dp" 设置宽度为具体值30   dp是单位
            android:layout_height="match_parent"
            android:background="#ececec"
        -->

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginRight="30dp"
            android:layout_weight="1"
            android:text="自主下单" />

        <!--
         android:layout_width="0dp"  设置宽度为具体值0 dp是单位 如果是0就要配合另外一个属性权重使用(layout_weight=1)
            android:layout_height="wrap_content" 设置高度 wrap_content 代表根据控件高度自动计算
            android:layout_gravity="center" 代表相对于父类布局对其方式 center 居中
            android:layout_marginRight="30dp" 设置外边距
            android:layout_weight="1"     权重1 线性布局特有
            android:gravity="center"      自身对其方式
            android:text="自主下单"       textView需要显示的值-->

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginTop="10dp"
        android:background="#fff"
        android:orientation="vertical">

        <!--
        android:layout_width="match_parent" 设置宽度 match_parent 代表铺满屏幕
        android:layout_height="wrap_content" 设置高度 wrap_content 代表根据控件高度自动计算
        android:layout_marginTop="10dp"   设置外边距
        android:background="#fff"       设置背景
        android:orientation="vertical"   设置布局方向 vertical 垂直布局 horizontal 水平布局
        -->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="46dp"
            android:layout_marginLeft="16dp"
            android:gravity="center"
            android:text="出行服务" />

        <!--
        android:layout_width="wrap_content" 设置宽度 wrap_content 代表根据控件高度自动计算
        android:layout_height="46dp"        设置高度为具体值
        android:layout_marginLeft="16dp"    设置左边距16dp
        android:gravity="center"            设置居中方式 居中对其
        android:text="出行服务"              设置显示的文本
        -->


        <!--设置一条线-->
        <View
