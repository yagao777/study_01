                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingTop="30dp"
                android:paddingBottom="30dp">

                <!--
                android:layout_width="0dp" 因为是三个平分所以需要设置宽度为0权重为1
                android:layout_height="wrap_content" 高度根据子View自动计算
                android:layout_weight="1"       权重为1
                android:gravity="center"        子View对其方式居中
                android:orientation="vertical"  设置布局方垂直布局
                android:paddingTop="30dp"       设置内上边距
                android:paddingBottom="30dp     设置内下边距
                -->

